{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Glucose",
  "identifier": "one.doubl.glucose",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "glucose",
        "width": 1280,
        "height": 720,
        "minWidth": 800,
        "minHeight": 450,
        "center": true,
        "decorations": false,
        "transparent": true,
        "fullscreen": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "dmg"],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "name": "Glucose Video File",
        "ext": ["mp4", "mkv", "avi", "mov", "wmv", "flv", "webm", "m4v"],
        "role": "Viewer",
        "rank": "Owner",
        "description": "Glucose Video File"
      }
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEYyMUQ3NTNBMkFEOEJEMDMKUldRRHZkZ3FPblVkOG1zc2tPMG1mWk44R0FHVVNZMWVoZDJGN1daUzNQVCtZbkhxam9jdSt0ODcK",
      "endpoints": [
        "https://github.com/rudi-q/glucose_media_player/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
